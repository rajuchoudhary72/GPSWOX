<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shazcom.gps.app">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".GPSWoxApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:ignore="UnusedAttribute">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCMchLkAxgt7STrdG0LgqkD57vg_3a2Ab4" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_name" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity
            android:name=".ui.activities.LoginActivity"
            android:configChanges="locale"
            android:screenOrientation="locked"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.Dashboard"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.MapPage"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.PlayBackRoute"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.RoutePage"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.SummaryPage"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.HistoryDetailPage"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.EventPage"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.ServicePage"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.AddServicePage"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.ForgotPassword"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.EventDetail"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.ShowPoint"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.Rulers"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.POI"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.GeoFencing"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.TaskPage"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.DeviceMapCluster"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.GprsCommand"
            android:screenOrientation="locked" />

        <activity
            android:configChanges="locale"
            android:name=".ui.activities.Alerts"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="locked" />

        <service
            android:name=".utils.FetchAddressIntentService"
            android:exported="false" />


        <service
            android:name=".network.fcm.FirebaseMessage"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


        <service
            android:name=".back.DeviceService"
            android:stopWithTask="false"
            android:enabled="true">

        </service>

        <receiver
            android:name=".back.RestartService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="RestartService" />
            </intent-filter>
        </receiver>


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>
</manifest>
