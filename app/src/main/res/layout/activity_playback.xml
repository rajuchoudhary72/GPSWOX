<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:subtitleTextAppearance="@style/ToolbarSubTitle"
        app:subtitleTextColor="#FFFFFF"
        app:title="Vehicle Location"
        app:titleTextColor="#FFFFFF" />


    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#121111">

        <LinearLayout
            android:id="@+id/dateTimeChange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/startDateTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawablePadding="3dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="09-03-2020\n00:00"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="to"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/endDateTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawablePadding="3dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="09-03-2020\n00:00"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/routeBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_circle" />

        <ImageView
            android:id="@+id/playBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:src="@drawable/playback" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/playBtn">


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/playSpeedDrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/playSpeedBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="1x"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                app:backgroundTint="@color/row_header" />


        </RelativeLayout>


    </RelativeLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.libraries.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLayout"
        android:layout_below="@id/toolBar"
        tools:context=".ui.activities.MapPage" />


    <RelativeLayout
        android:id="@+id/speedLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/toolBar"
        android:background="#121111"
        android:visibility="invisible">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="3dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:text="12:04:31 AM 07-03-2020"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="2.32km"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/distance"
            android:gravity="center_vertical"
            android:text="2.32km"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


    </RelativeLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/mapType"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/speedLayout"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:backgroundTint="@color/btn_color"
        android:elevation="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="25dp"
        app:elevation="0dp"
        app:icon="@drawable/ic_map"
        app:iconSize="27dp"
        app:iconTint="@color/black" />


    <HorizontalScrollView
        android:id="@+id/mapTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolBar"
        android:layout_toLeftOf="@id/mapType"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mapNormal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="7dp"
                app:contentPadding="2dp"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/map_normal_type" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="5sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Normal"
                        android:textColor="@color/black" />

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mapHybrid"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="7dp"
                app:contentPadding="2dp"
                app:strokeWidth="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/map_type_hybrid" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="5sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Hybrid"
                        android:textColor="@color/white" />

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mapSatellite"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="7dp"
                app:contentPadding="2dp"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/map_type_satelite" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="5sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Satellite"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mapTerrain"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="7dp"
                app:contentPadding="2dp"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/map_type_terain" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="5sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Terrain"
                        android:textColor="@color/black" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </HorizontalScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:visibility="invisible" />


</RelativeLayout>

