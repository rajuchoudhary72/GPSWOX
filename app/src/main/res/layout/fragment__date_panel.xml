    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0.5dp"-->
    <!--        android:background="@android:color/darker_gray" />-->


    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Select Device"
        android:textSize="17sp" />


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/selectDevice"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@android:color/darker_gray"
        android:gravity="left"
        android:spinnerMode="dropdown" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />

    <RadioGroup
        android:id="@+id/timeRadioGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:checkedButton="@id/today">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:text="Today"
            android:textSize="17sp" />


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/yesterDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:text="Yesterday"
            android:textSize="17sp" />


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:text="Week"
            android:textSize="17sp" />


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/currentMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:text="Current Month"
            android:textSize="17sp" />


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/lastMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:text="Last Month"
            android:visibility="gone"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/customPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:text="Custom Peroid"
            android:textSize="17sp" />


    </RadioGroup>


    <RelativeLayout
        android:id="@+id/timePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startDateTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_background"
            android:clickable="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Select Start Date"
            android:textSize="13sp"
            app:backgroundTint="@color/text_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/endDateTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startDateTimeTxt"
            android:layout_alignStart="@id/startDateTimeTxt"
            android:layout_alignEnd="@id/startDateTimeTxt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_background"
            android:clickable="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Select End Date"
            android:textSize="13sp"
            app:backgroundTint="@color/text_color" />

    </RelativeLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/showBtn"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Show"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>