<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/row_header">


    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/searchEdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/square_shap"
            android:hint="Search Vehicle"
            android:inputType="text|textCapCharacters"
            android:padding="10dp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/topTxtLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="All"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Moving"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Stop"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Idle"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Offline"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/topTxtLayout"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioController"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/allTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_button_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:tag=""
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/runningTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:tag="green"
                    android:textSize="20dp" />


                <RadioButton
                    android:id="@+id/idleTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:tag="yellow"
                    android:textSize="20dp" />


                <RadioButton
                    android:id="@+id/inActiveTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:tag="blue"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/stopTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_button_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:tag="red"
                    android:textSize="20dp" />


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topIndication"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/topTxtLayout"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/allTabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_button_selector"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/device_top_Image_size"
                    android:layout_height="@dimen/device_top_Image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@android:drawable/presence_online"
                    android:tint="@color/black" />

                <TextView
                    android:id="@+id/totalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/runningTabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_button_selector"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/device_top_Image_size"
                    android:layout_height="@dimen/device_top_Image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/map_default_running" />

                <TextView
                    android:id="@+id/runningTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idleTabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_button_selector"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/device_top_Image_size"
                    android:layout_height="@dimen/device_top_Image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/map_default_idle" />

                <TextView
                    android:id="@+id/idleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inactiveTabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_button_selector"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/device_top_Image_size"
                    android:layout_height="@dimen/device_top_Image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/map_default_inactive" />

                <TextView
                    android:id="@+id/inActiveTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stopTabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_button_selector"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/device_top_Image_size"
                    android:layout_height="@dimen/device_top_Image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/map_default_stop" />

                <TextView
                    android:id="@+id/stopTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deviceList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:layoutAnimation="@anim/layout_animation"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include layout="@layout/empty_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>