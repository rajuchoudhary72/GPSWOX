<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="10dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="70dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:text="@string/type"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_background">

                    <Spinner
                        android:id="@+id/reportType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/black"
                        android:cursorVisible="true"
                        android:entries="@array/report_types"
                        android:fontFamily="sans-serif"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:spinnerMode="dropdown"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:textSize="16dp" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:text="@string/format"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_background">

                    <Spinner
                        android:id="@+id/reportFormat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/black"
                        android:cursorVisible="true"
                        android:entries="@array/report_formats"
                        android:fontFamily="sans-serif"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:spinnerMode="dropdown"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:textSize="16dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:text="@string/period"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_background">

                    <Spinner
                        android:id="@+id/reportPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/black"
                        android:cursorVisible="true"
                        android:entries="@array/report_period"
                        android:fontFamily="sans-serif"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:spinnerMode="dropdown"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:textSize="16dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fromLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="Date from:"
                        android:textSize="15sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/startTimeCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/row_header"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="0dp">

                        <TextView
                            android:id="@+id/startTimeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="12.00 AM"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/startDateCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/row_header"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="0dp">

                        <TextView
                            android:id="@+id/startDateTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="2020-03-11"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="Date to:"
                        android:textSize="17sp" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/endDateCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/row_header"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="0dp">

                        <TextView
                            android:id="@+id/endDateTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="2020-03-11"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/endTimeCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/row_header"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="0dp">

                        <TextView
                            android:id="@+id/endTimeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="11:45 PM"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:text="@string/devices"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_background"
                    android:clickable="true">

                    <EditText
                        android:id="@+id/reportDevices"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textNoSuggestions"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:scrollbars="horizontal"
                        android:text="SELECT DEVICE"
                        android:textSize="15sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/generateBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/generate_report"
                        android:textSize="20dp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:indeterminateTint="@color/colorPrimaryDark"
                        android:visibility="gone" />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/text_color" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:text="@string/title"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <EditText
                    android:id="@+id/titleTxt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_background"
                    android:cursorVisible="true"
                    android:drawablePadding="10dp"
                    android:drawableTint="#000000"
                    android:fontFamily="sans-serif"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:text="@string/email_is_required_to_schedule_report"
                    android:textColor="#000000"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:text="@string/send_to_email"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_background"
                    android:cursorVisible="true"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="#000000"
                    android:fontFamily="sans-serif"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:text="@string/for_multiple_emails_separate"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/daily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:text="Daily" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:text="Weekly" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorPrimary"
                        android:text="Monthly" />

                </LinearLayout>


                <EditText
                    android:id="@+id/timeTxt"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_background"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawableTint="@color/black"
                    android:gravity="center_vertical"
                    android:hint="00:00"
                    android:inputType="time"
                    android:maxLength="5"
                    android:padding="10dp"
                    android:drawablePadding="10sp"
                    android:text="00:00"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/scheduleReport"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:enabled="false"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/schedule_report"
                    android:textSize="20dp" />


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <include layout="@layout/device_bottom_sheet_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>