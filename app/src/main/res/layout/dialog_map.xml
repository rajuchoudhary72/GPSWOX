<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardMaxElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="20dp"
                        android:text="Latitude"
                        android:textColor="#90404040"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/locLatitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:text="-"
                        android:textColor="#404040"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="20dp"
                        android:text="Longitude"
                        android:textColor="#90404040"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/locLongitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:text="-"
                        android:textColor="#404040"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/mapFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLayout" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/closeBtn"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:elevation="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@color/white"
        app:cornerRadius="25dp"
        app:elevation="0dp"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconSize="27dp"
        app:iconTint="@color/black" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBtn"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:elevation="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@color/white"
        app:cornerRadius="25dp"
        app:elevation="0dp"
        app:icon="@android:drawable/ic_menu_save"
        app:iconSize="27dp"
        app:iconTint="@color/black" />

    <RelativeLayout
        android:id="@+id/spinnerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/saveBtn"
        android:layout_toRightOf="@id/closeBtn"
        android:background="@color/row_header"
        android:visibility="invisible">

        <Spinner
            android:id="@+id/deviceSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            android:padding="5dp"
            android:spinnerMode="dropdown" />

    </RelativeLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/clearPolygons"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/event_name"
        android:background="@drawable/edit_background"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/clear_polygon"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp" />



</RelativeLayout>