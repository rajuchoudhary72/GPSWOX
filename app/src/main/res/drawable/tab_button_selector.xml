<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--If radio button is checked. -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Bottom color layer. -->
            <item>
                <color android:color="@color/event_name" />
            </item>
            <!-- Top color layer. -->
            <item android:bottom="5dp" android:drawable="@color/row_header" />
        </layer-list>
    </item>

    <!--If radio button is unchecked. -->
    <item android:state_checked="false">
        <layer-list>
            <!-- Bottom color layer. -->
            <item>
                <color android:color="@color/row_header" />
            </item>
            <!-- Top color layer. -->
            <item android:bottom="0dp" android:drawable="@color/row_header" />
        </layer-list>
    </item>

</selector>